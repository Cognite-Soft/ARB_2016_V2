<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ARB // @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--Begin Content-->
    <!-- Begin Navigation -->
    <div class="contain-to-grid">
        <nav class="top-bar">
            @Html.Partial("_TopLeftNavigation")
            <section class="top-bar-section">
                @Html.Partial("_TopRightNavigation")
            </section>
        </nav>
    </div>
    <!-- End Navigation -->
    <!-- Begin Header -->
    <div class="contain-to-grid header">
        <div class="row">
            <div class="large-9 columns">
                <h4 class="uni-logo">
                    @RenderSection("pageinfo", required: false)
                </h4>
            </div>
            <div class="large-3 columns">
                <h1 class="logo">
                    <img src="~/Content/Images/arb-logo.png" title="Architects Registration Board">
                </h1>
            </div>
        </div>
    </div>
    <!-- End Header -->
    <!-- Begin Notification Area -->
    <div class="notification-container"></div>
    <!-- End Notification Area -->
    <!-- Body -->
    <div class="row first">
        <!-- Begin Body Content -->
        @RenderBody()
        <!-- End Body Content -->
    </div>
    <!-- End Body -->
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="large-12 columns">
                <hr>
                <div class="row">
                    <div class="large-6 columns">
                        <p>&copy; @DateTime.Now.Year Architects Registration Board</p>
                    </div>
                    <div class="large-6 columns">
                        <ul class="inline-list right">
                            <li><a href="">Privacy &amp; Terms</a></li>
                            <li><a href="">Help</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer -->
    <!--End Content-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/jnotify")
    @Scripts.Render("~/bundles/magicsuggest")
    @Scripts.Render("~/bundles/foundation")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        var arbCogniteCurrentUserNotifications = @Html.Raw(ViewBag.NotificationsJson);
    </script>
    @Scripts.Render("~/bundles/notifications")
</body>
</html>