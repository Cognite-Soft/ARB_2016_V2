@model Cognite.Arb.Web.Models.Account.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="large-4 large-centered columns">
    <!-- Begin Body Content -->
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "custom", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="box login">
            <h4>Reset Password</h4>
            <div class="row">
                <div class="large-12 columns">
                    @Html.HiddenFor(m => m.ResetToken)
                    @Html.ValidationSummary("", new { @class = "validation-errors" })
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    @Html.LabelFor(m => m.Password, new { @class = "inline", @for = "password" })
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Type your new password...", @tabindex = 1, autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-error" })
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "inline", @for = "password-confirm" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Re-type your new password...", @tabindex = 2 })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "validation-error" })
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <input type="submit" class="button small radius full-width" value="Reset" tabindex="3" />
                </div>
            </div>
        </div>
    }
    <!-- End Body Content -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}